# backend/.env
# Djangoの基本設定
SECRET_KEY=your-secret-key-here  # セキュリティキー（必ず変更してください）
DEBUG=True                       # 開発環境ではTrue、本番環境ではFalse
ALLOWED_HOSTS=localhost,127.0.0.1  # アクセスを許可するホスト名

# データベース設定
DB_NAME=todo_db          # データベース名
DB_USER=root       # データベースのユーザー名
DB_PASSWORD=password  # データベースのパスワード
DB_HOST=localhost       # データベースのホスト名
DB_PORT=3306           # MySQLのデフォルトポート
